<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
  <data>


    <record model="ir.actions.act_window"
    id="act_open_documents_view">
      <field name="name">Purchase Orders</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">purchase.order</field>
      <field name="view_type">form</field>
      <field name="view_mode">kanban,tree,form,graph</field>
    </record>


    <record model='ir.actions.act_window'
      id='action_ir_attachment_share'>
            <field name='name'>Share</field>
            <field name='res_model'>purchase.order.share</field>
            <field name='type'>ir.actions.act_window</field>
            <field name='target'>new</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
        </record>
      <record model="ir.ui.view"
        id="view_ir_attachment_share_form">
            <field name="name">purchase.order.share.form</field>
            <field name="model">purchase.order.share</field>
            <field name="arch" type="xml">
                <form string="Share">
                    <group>
                        <field name="reference" class="oe_inline" readonly="0"/>
                        <field name="attachments" class="oe_inline" readonly="0"  widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="action_share" string="Save"
                        class="oe_highlight" type="object" />
                        or
                        <button special="cancel" string="Cancel"
                        class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

      <record model="ir.actions.act_window" id="act_open_share_document">
      <field name="name">Share documents</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">purchase.order.share</field>
      <field name="src_model">purchase.order</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <record id="val_open_make_fake_view" model="ir.values">
      <field name="name">Share documents</field>
      <field name="model">purchase.order</field>
      <field name="key2">client_action_multi</field>
      <field name="value"
             eval="'ir.actions.act_window,' + str(ref('act_open_share_document'))"/>
    </record>

  </data>
</openerp>
