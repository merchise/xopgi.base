<?xml version="1.0" encoding="UTF-8"?>
<template>
  <t t-name='cdr_notify_title'>
    <span t-attf-class="e_cdr_#{priority or 'info'}">
      <t t-esc="label"/>:
    </span>

    <span t-attf-class="e_cdr_id_#{id}">
      <t t-esc="title"/>
    </span>
  </t>
  <t t-name='cdr_notify_body'>
    <span t-esc="message"/>
    <br/>
    <br t-if="action"/>
    <button class='cdr_notification_action oe_highlight oe_form oe_button'
            t-if="action">
      <span>Ok</span>
    </button>
  </t>
</template>