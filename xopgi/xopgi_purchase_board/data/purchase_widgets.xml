<?xml version="1.0"?>
<openerp>
  <data>
    <record id="individual_purchase_widget" model="xopgi.board.widget">
      <field name="name">Purchase</field>
      <field name="template_name">individual_purchase_widget</field>
      <field name="xml_template"><![CDATA[
        <templates>
          <t t-name="individual_purchase_widget">
            <t t-call="purchase_widget"/>
          </t>
        </templates>]]>
      </field>
      <field name="python_code">result = {
          'values': env['purchase.board'].get_data(today)
        }
      </field>
    </record>

    <record id="company_purchase_widget" model="xopgi.board.widget">
      <field name="name">Purchase (Company)</field>
      <field name="template_name">company_purchase_widget</field>
      <field name="xml_template"><![CDATA[
        <templates>
          <t t-name="company_purchase_widget">
            <t t-call="purchase_widget"/>
          </t>
        </templates>]]>
      </field>
      <field name="python_code">result = {
        'values': env['purchase.board'].get_data(today, mode='company')
        }
      </field>
    </record>
  </data>
</openerp>
