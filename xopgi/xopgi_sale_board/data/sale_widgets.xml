<?xml version="1.0"?>
<openerp>
  <data>
    <record id="individual_sale_widget" model="xopgi.board.widget">
      <field name="name">Sales</field>
      <field name="category" ref="base.module_category_sales"/>
      <field name="template_name">individual_sales_widget</field>
      <field name="xml_template"><![CDATA[
        <templates>
          <t t-name="individual_sales_widget">
            <t t-call="sales_team.SalesDashboard"/>
          </t>
        </templates>]]>
      </field>
      <field name="python_code">result = {
            'values': env['crm.lead'].retrieve_sales_dashboard_data(today)
        }
      </field>
    </record>

    <record id="company_sale_widget" model="xopgi.board.widget">
      <field name="name">Sales (company)</field>
      <field name="category" ref="base.module_category_sales"/>
      <field name="template_name">company_sales_widget</field>
      <field name="xml_template"><![CDATA[
        <templates>
          <t t-name="company_sales_widget">
            <t t-call="sales_team.SalesDashboard"/>
          </t>
        </templates>]]>
      </field>
      <field name="python_code">result = {
        'values':
        env['crm.lead'].retrieve_sales_dashboard_data(today, mode='company')
        }
      </field>
    </record>
  </data>
</openerp>
