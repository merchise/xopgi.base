<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="assets_view_hr_job_form" model="ir.ui.view">
      <field name="name">assets.hr.job.form</field>
      <field name="model">hr.job</field>
      <field name="inherit_id" ref="xopgi_hr_contract.xopgi_view_hr_job_form" />
      <field name="arch" type="xml">
        <page string="Security" position="after">
            <page string="Widgets">
              <field name="widgets" nolabel="1"
                     context="{'default_hr_job': active_id}">
                <tree editable="top">
                  <field name="widget"/>
                  <field name="priority"/>
                </tree>
              </field>
            </page>
        </page>
      </field>
    </record>
  </data>
</openerp>
