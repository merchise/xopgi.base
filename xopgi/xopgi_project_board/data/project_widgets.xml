<?xml version="1.0"?>
<openerp>
  <data>
    <record id="individual_project_widget" model="xopgi.board.widget">
      <field name="name">Management</field>
      <field name="template_name">individual_project_widget</field>
      <field name="xml_template"><![CDATA[
        <templates>
          <t t-name="individual_project_widget">
            <t t-call="project_widget"/>
          </t>
        </templates>]]>
      </field>
      <field name="python_code">result = {
          'values': env['project.board'].get_data(today)
        }
      </field>
    </record>

    <record id="company_project_widget" model="xopgi.board.widget">
      <field name="name">Management (Company)</field>
      <field name="template_name">company_project_widget</field>
      <field name="xml_template"><![CDATA[
        <templates>
          <t t-name="company_project_widget">
            <t t-call="project_widget"/>
          </t>
        </templates>]]>
      </field>
      <field name="python_code">result = {
        'values': env['project.board'].get_data(today, mode='company')
        }
      </field>
    </record>
  </data>
</openerp>
