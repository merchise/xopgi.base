<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
  <data>
    <record id="view_directory_config_form" model="ir.ui.view">
      <field name="name">directory.config.form</field>
      <field name="model">directory.config</field>
      <field name="arch" type="xml">
        <form string="Directory Configuration"
              class="oe_form_configuration">
          <header>
            <button string="Apply" type="object" name="execute"
                    class="oe_highlight"/>
            or
            <button string="Cancel" type="object" name="cancel"
                    class="oe_link"/>
          </header>
          <group string="Contact Reference Configuration">
            <div>
                <field name="models" nolabel="1"/>
            </div>
          </group>
        </form>
      </field>
    </record>

    <record id="action_directory_config" model="ir.actions.act_window">
      <field name="name">Directory Configuration</field>
      <field name="res_model">directory.config</field>
      <field name="view_id" ref="view_directory_config_form"/>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
    </record>

    <menuitem id="menu_directory_config"
              parent="base.menu_config"
              sequence="37" action="action_directory_config"/>
  </data>
</openerp>
