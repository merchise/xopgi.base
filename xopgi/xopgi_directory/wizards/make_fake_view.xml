<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
  <data>

    <record id="view_make_fake_form" model="ir.ui.view">
      <field name="name">make_fake.form</field>
      <field name="model">make.fake</field>
      <field name="arch" type="xml">
        <form string="Make fake partner">
          <field name="owner"
                 domain="[('id','not in', contact_information and contact_information[0][2] or [])]"/>
          <newline/>
          <field name="contact_information"/>
          <footer>
            <button string="Confirm"
                    name="confirm" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_make_fake_view">
      <field name="name">Make Fake Partner</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">make.fake</field>
      <field name="src_model">res.partner</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    <record id="val_open_make_fake_view" model="ir.values">
      <field name="name">Make Fake Partner</field>
      <field name="model">res.partner</field>
      <field name="key2">client_action_multi</field>
      <field name="value"
             eval="'ir.actions.act_window,' + str(ref('act_open_make_fake_view'))"/>
    </record>
  </data>
</openerp>