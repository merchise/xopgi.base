<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
  <data>

      <template id="assets_backend" name="google_drive assets" inherit_id="web.assets_backend">
          <xpath expr="." position="inside">
              <script type="text/javascript" src="/xopgi_document_share_all/static/src/js/share.js"></script>
          </xpath>
      </template>

    <record model='ir.actions.act_window' id='action_ir_attachment_share_all'>
            <field name='name'>Share documents</field>
            <field name='res_model'>ir.attachment.share.all</field>
            <field name='type'>ir.actions.act_window</field>
            <field name='target'>new</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
    </record>

    <record model="ir.ui.view" id="view_ir_attachment_share_all_form">
            <field name="name">ir.attachment.share.all.form</field>
            <field name="model">ir.attachment.share.all</field>
            <field name="arch" type="xml">
                <form string="Share">
                    <group>
                        <field name="reference" class="oe_inline" readonly="0"/>
                        <field name="attachments" class="oe_inline" readonly="0" widget="many2many_tags"/>
                    </group>
                    <footer>
                        <button name="action_share" string="Save"
                        class="oe_highlight" type="object" />
                        or
                        <button special="cancel" string="Cancel"
                        class="oe_link" />
                    </footer>
                </form>
            </field>
    </record>
  </data>
</openerp>
